@model List<MVC_Voorbeeld3.Models.Persoon>

@{
    ViewBag.Title = "Personen";
}

@if(TempData["Message"] != null)
{
<div class="alert alert-success alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    @TempData["Message"]
</div>
}

<h2>@ViewBag.Title</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Voornaam</th>
            <th>Familienaam</th>
            <th>Score</th>
            <th>Wedde</th>
            <th>Paswoord</th>
            <th>Geboren</th>
            <th>Gehuwd</th>
            <th>Opmerkingen</th>
            <th>Geslacht</th>
            <th>Verwijderen</th>
            <th>Wijzigen</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var persoon in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => persoon.ID)</td>
                <td>@Html.DisplayFor(m => persoon.Voornaam)</td>
                <td>@Html.DisplayFor(m => persoon.Familienaam)</td>
                <td>@Html.DisplayFor(m => persoon.Score)</td>
                <td>@Html.DisplayFor(m => persoon.Wedde)</td>
                <td>@Html.DisplayFor(m => persoon.Paswoord)</td>
                <td>@Html.DisplayFor(m => persoon.Geboren)</td>
                <td>@Html.DisplayFor(m => persoon.Gehuwd)</td>
                <td>@Html.DisplayFor(m => persoon.Opmerkingen)</td>
                <td>@Html.DisplayFor(m => persoon.Geslacht)</td>
                <td>
                    <a href="@Url.Action("Verwijder", new { id = persoon.ID})"><p class="btn btn-danger">Verwijder</p></a>
                </td>
                <td>
                    <a href="@Url.Action("Wijzigen", new { id = persoon.ID})"><p class="btn btn-warning">Wijzig</p></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Toevoegen")"><p class="btn btn-success">Voeg Nieuwe persoon toe</p></a>
