@model List<MVC_Voorbeeld3.Models.Filiaal>

<h2>Filialen</h2>
<ul>
    @foreach(var filiaal in Model)
    {
        <li>
            @filiaal.ID @filiaal.Naam @MyHelpers.Milieuscore(filiaal.Gebouwd)
            @Html.DisplayFor(m => filiaal.Gebouwd)
            @Html.DisplayFor(m => filiaal.Waarde)
            @Html.DisplayFor(m => filiaal.Eigenaar)
            
            <a href="@Url.Action("Verwijderen", new { id = filiaal.ID })" >Verwijderen</a>
            
        </li>
    }
</ul>


